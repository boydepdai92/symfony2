{% extends 'base.html.twig' %}
{% block body %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success"> {{ flashMessage }} </div>
    {% endfor %}
    <h3 class="page-header">Lastest Todo</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Todo</th>
                <th>Description</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for item in todo %}
            <tr>
                <th scope="row">{{ item.id }}</th>
                <td>{{ item.name }}</td>
                <td>{{ item.description }}</td>
                <td>{{ item.date|date('Y-m-d H:i:s') }}</td>
                <td>
                    <a href="/symfony2/web/app_dev.php/todo/detail/{{ item.id }}" class="btn btn-success">View</a>
                    <a href="/symfony2/web/app_dev.php/todo/edit/{{ item.id }}" class="btn btn-default">Edit</a>
                    <a href="/symfony2/web/app_dev.php/todo/delete/{{ item.id }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}